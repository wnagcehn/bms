		</dependency>
		<dependency>
			<groupId>com.jiuyescm.framework</groupId>
			<artifactId>datasource-multiple</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>com.jiuyescm.scm</groupId>
